{
  "name": "binary-markup",
  "version": "0.8.0",
  "description": "Binary Markup Language - declarative way to describe binary data",
  "keywords": [
    "BML",
    "binary",
    "file",
    "buffer",
    "parse",
    "pack"
  ],
  "author": {
    "name": "Sergii Kostyrko",
    "email": "srg.kostyrko@gmail.com"
  },
  "main": "dist/binary-markup.umd.js",
  "module": "dist/binary-markup.es5.js",
  "typings": "dist/types/binary-markup.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srg-kostyrko/BML.git"
  },
  "bugs": {
    "url": "https://github.com/srg-kostyrko/BML/issues"
  },
  "homepage": "https://github.com/srg-kostyrko/BML#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c",
    "commit": "git add . && git-cz",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "yarn build",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' '__test__/**/*.ts'",
    "release": "standard-version",
    "release:beta": "standard-version -p beta"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.14.3",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
