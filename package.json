{
  "name": "binary-markup",
  "version": "0.8.4",
  "description": "Binary Markup Language - declarative way to describe binary data",
  "keywords": [
    "BML",
    "binary",
    "file",
    "buffer",
    "parse",
    "pack"
  ],
  "author": {
    "name": "Sergii Kostyrko",
    "email": "srg.kostyrko@gmail.com"
  },
  "main": "dist/binary-markup.umd.js",
  "module": "dist/binary-markup.es5.js",
  "typings": "dist/types/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srg-kostyrko/BML.git"
  },
  "bugs": {
    "url": "https://github.com/srg-kostyrko/BML/issues"
  },
  "homepage": "https://github.com/srg-kostyrko/BML#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c",
    "commit": "git add . && git-cz",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "yarn build",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "release": "standard-version",
    "release:beta": "standard-version -p beta"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-problems": "^3.0.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "jest-environment-node": "^24.8.0",
    "lint-staged": "^9.0.2",
    "prettier": "^1.14.3",
    "rollup": "^1.15.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "standard-version": "^6.0.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
