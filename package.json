{
  "name": "binary-markup",
  "version": "0.8.6",
  "description": "Binary Markup Language - declarative way to describe binary data",
  "keywords": [
    "BML",
    "binary",
    "file",
    "buffer",
    "parse",
    "pack"
  ],
  "author": {
    "name": "Sergii Kostyrko",
    "email": "srg.kostyrko@gmail.com"
  },
  "main": "dist/binary-markup.umd.js",
  "module": "dist/binary-markup.es5.js",
  "typings": "dist/types/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srg-kostyrko/BML.git"
  },
  "bugs": {
    "url": "https://github.com/srg-kostyrko/BML/issues"
  },
  "homepage": "https://github.com/srg-kostyrko/BML#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c",
    "commit": "git add . && git-cz",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "yarn build",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "release": "standard-version",
    "release:beta": "standard-version -p beta"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-problems": "^3.0.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-environment-node": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.14.3",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.24.0",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
